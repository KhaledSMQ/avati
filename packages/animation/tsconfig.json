{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Target and Module Configuration
    "target": "es2018",                // Compile to ES2018 for good browser support
    "module": "esnext",                // Use ESNext for better tree-shaking
    "moduleResolution": "node",        // Use Node's module resolution strategy
    "esModuleInterop": true,          // Enable ESM/CommonJS interoperability
    "allowSyntheticDefaultImports": true,

    // Strict Type Checking
    "strict": true,                       // Enable all strict type checking options
    "noImplicitAny": true,                // Raise error on expressions and declarations with implied 'any' type
    "strictNullChecks": true,             // Enable strict null checks
    "strictFunctionTypes": true,          // Enable strict checking of function types
    "strictPropertyInitialization": true, // Ensure class properties are initialized
    "noImplicitThis": true,               // Raise error on 'this' expressions with implied 'any' type
    "alwaysStrict": true,                 // Parse in strict mode and emit "use strict" for each source file

    // Module and Library Settings
    "declaration": true,               // Generate corresponding .d.ts file
    "declarationDir": "./dist",       // Output directory for generated declaration files
    "sourceMap": true,                // Generate corresponding .map file
    "removeComments": false,          // Keep comments in output

    // Advanced Options
    "skipLibCheck": true,             // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,        // Allow importing .json files

    // Output Configuration
    "outDir": "./dist",               // Output directory for compiled files
    "rootDir": "./src",               // Root directory of source files

    // Library Settings
    "lib": [
      "esNext",                        // Include all ECMAScript features
      "es2018",
      "dom"                           // Include DOM types if you need them
    ]
  },
  "include": [
    "src/**/*"                        // Include all files in src directory
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",                   // Exclude test files
    "**/*.spec.ts"
  ]
}
