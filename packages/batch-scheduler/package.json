{
  "name": "@avatijs/batch-scheduler",
  "version": "0.1.0",
  "description": "Batch scheduler package part of Avati project",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "unpkg": "dist/index.umd.min.js",
  "jsdelivr": "dist/index.umd.min.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:dev && npm run build:packages",
    "build:dev": "webpack --mode development --config-name umd --config-name esm --config-name cjs",
    "build:packages": "webpack --mode production --config-name umd --config-name esm --config-name cjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "watch": "webpack --mode=development --watch",
    "watch:slient": "webpack --mode=development --watch --silent",
    "clean": "rimraf dist"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "author": {
    "name": "Khaled Sameer",
    "email": "khaled.smq@hotmail.com",
    "url": "https://khaled.ee/"
  },
  "homepage": "https://avati.io/",
  "bugs": {
    "url": "https://github.com/KhaledSMQ/avati/issues",
    "email": "khaled.smq@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KhaledSMQ/avati.git",
    "directory": "packages/batch-scheduler"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "avati",
    "scheduler",
    "batch",
    "task-queue",
    "priority-queue",
    "async",
    "typescript"
  ]
}
