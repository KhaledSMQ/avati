{
  "name": "avati",
  "version": "1.0.0",
  "license": "MIT",
  "type": "commonjs",
  "author": {
    "name": "Khaled Sameer",
    "email": "khaled.smq@hotmail.com",
    "url": "https://khaled.ee/"
  },
  "homepage": "https://avati.io/",
  "repository": "khaledsmq/avatar",
  "bugs": {
    "url": "https://github.com/khaledsmq/avati"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "type-check": "tsc --noEmit",
    "clean": "npm run clean:dist && npm run clean:types && npm run clean:maps && npm run clean:jsmap",
    "clean:dist": "rimraf packages/*/dist",
    "clean:types": "rimraf packages/**/*.d.ts -g",
    "clean:maps": "rimraf packages/**/*.ts.map -g",
    "clean:jsmap": "rimraf packages/**/*.js.map -g",
    "prepare-packages": "node scripts/prepare-packages.mjs",
    "publish-packages": "npm run build && npm run prepare-packages && node scripts/publish-packages.mjs",
    "test": "jest",
    "prepare": "husky",
    "lint": "eslint packages/*/src/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "generate-changelog": "node scripts/generate-changelog.mjs",
    "precommit": "lint-staged",
    "commit": "cz",
    "version": "npm run generate-changelog && git add packages/*/CHANGELOG.md",
    "version-packages": "lerna version --no-push --no-git-tag-version && npm run version",
    "verify-commit": "node scripts/verify-commit.mjs",
    "pre-commit": "node scripts/pre-commit.mjs",
    "copy-to-modules": "node scripts/copy-to-node-modules.mjs",
    "build-and-copy": "npm run build && npm run copy-to-modules"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "@typescript-eslint/eslint-plugin": "^8.x.x",
    "@typescript-eslint/parser": "^8.x.x",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.3.1",
    "css-loader": "^7.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.x.x",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.x.x",
    "lint-staged": "^15.2.10",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.80.6",
    "sass-loader": "^16.0.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  }
}
