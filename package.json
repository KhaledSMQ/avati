{
  "name": "avati",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "commonjs",
  "author": {
    "name": "Khaled Sameer",
    "email": "khaled.smq@hotmail.com",
    "url": "https://khaled.ee/"
  },
  "homepage": "https://avati.io/",
  "repository": "khaledsmq/avatar",
  "bugs": {
    "url": "https://github.com/khaledsmq/avati"
  },
  "packageManager": "yarn@3.6.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "lerna run build --stream --sort",
    "dev": "npm run dev --workspaces --recursive",
    "type-check": "tsc --noEmit",
    "clean": "npm run clean:dist && npm run clean:types && npm run clean:maps && npm run clean:jsmap",
    "clean:dist": "rimraf packages/*/dist",
    "clean:types": "rimraf packages/**/*.d.ts -g",
    "clean:maps": "rimraf packages/**/*.ts.map -g",
    "clean:jsmap": "rimraf packages/**/*.js.map -g",
    "prepare-packages": "node scripts/prepare-packages.mjs",
    "publish-packages": "npm run build && npm run prepare-packages && node scripts/publish-packages.mjs",
    "test": "jest --coverage --config jest.config.js",
    "prepare": "husky",
    "lint": "eslint packages/*/src/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "generate-changelog": "node scripts/generate-changelog.mjs",
    "precommit": "lint-staged",
    "version": "npm run generate-changelog && git add packages/*/CHANGELOG.md",
    "version-packages": "lerna version --no-push --no-git-tag-version && npm run version",
    "verify-commit": "node scripts/verify-commit.mjs",
    "pre-commit": "node scripts/pre-commit.mjs",
    "copy-to-modules": "node scripts/copy-to-node-modules.mjs",
    "build-and-copy": "npm run build && npm run copy-to-modules",
    "lerna:version": "lerna version --no-push --conventional-commits",
    "lerna:publish": "lerna publish from-git --yes",
    "lerna:changed": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:list": "lerna list",
    "update:versions": "lerna version --no-push --no-git-tag-version",
    "check:updates": "lerna updated",
    "release": "yarn build && yarn lerna:version && yarn lerna:publish",
    "check:deps": "depcheck",
    "check:deps:all": "lerna run check:deps",
    "check:deps:unused": "depcheck --ignores=\"\" --ignore-patterns=\"dist,coverage\"",
    "check:deps:missing": "depcheck --onlyUnused=false",
    "check:deps:duplicates": "yarn list --pattern \"*\" --depth=0",
    "deps:clean": "yarn check:deps:unused && yarn dedupe && yarn install"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@codecov/webpack-plugin": "^1.4.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "bundlesize": "^0.18.2",
    "chalk": "^5.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^16.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jscpd": "^4.0.5",
    "lerna": "^8.1.9",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.81.0",
    "sass-loader": "^16.0.3",
    "source-map-explorer": "^2.5.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  }
}
